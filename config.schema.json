{
  "pluginAlias": "AmazonDash-MAC",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "definitions": {
      "buttons_obj": {
        "type": "object",
        "title": "Button",
        "properties": {
            "name": {
                "type": "string",
                "minLength": 1,
                "required": true,
                "description": "The name to appear in HomeKit."
                },
            "MAC": {
                "type": "string",
                "title": "MAC Address",
                "pattern": "^([A-F0-9]{2}:){5}[A-F0-9]{2}$",
                "required": true,
                "description": "This button's upper-case MAC address."
                },
            "serial": {
                "type": "string",
                "title": "Serial Number"
                },
            "firmware": {
                "type": "string",
                "title": "Firmware"
                },
            "model": {
                "type": "string",
                "title": "Model",
                "description": "The model number is printed on the back of the Dash button."
                },
            "alias": {
                "type": "array",
                "title": "Aliases",
                "description": "An alias allows multiple buttons to act as one. If no aliases are needed, remove these elements.",
                "items": {
                "type": "string",
                "title": "Alias",
                "pattern": "^([A-F0-9]{2}:){5}[A-F0-9]{2}$",
                "required": true,
                "description": "Upper-case MAC address of the button to act as this button."
                }
          }
        }
      }
    },
    "type": "object",
    "properties": {
        "interface": {
            "title": "Interface",
            "type": "string",
            "minLength": 1,
            "required": true,
            "description": "Try iwconfig or similar to get your wifi device interface name."
          },
            "channel": {
            "title": "Channel",
            "type": "number",
            "minimum": 1,
            "required": true,
            "description": "Choose a wifi channel not or least used in your environment to reduce overhead. This is not related to a connected Dash button's wifi channel."
          },
           "debug": {
            "title": "Debug",
            "type": "number",
            "default": 1,
            "oneOf": [
                { "title": "Silent", "enum": [0]},
                { "title": "Default Runtime Messages", "enum": [1] },
                { "title": "Testing Messages", "enum": [2] },
                { "title": "Clear Accessories", "enum": [10] }
                ],
            "description": "If you choose \"Clear Accessories,\" restart homebridge, then change this value to \"Testing Messages\" and restart homebridge again."
          },
      "buttons": {
        "title": "Dash Buttons",
        "type": "array",
        "description": "Add more with \"Add Button\" below.",
        "items": { "$ref": "#/definitions/buttons_obj", "extendRefs": true }
      }
    },
    "required": [ "buttons" ]
  }
}
